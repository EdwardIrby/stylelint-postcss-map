{
  "name": "stylelint-postcss-map",
  "version": "1.0.0",
  "description": "A stylelint custom rule to check the use of postcss-map variables on declarations",
  "main": "lib/index.js",
  "scripts": {
    "compile": "babel -d lib/ src/",
    "pretest": "babel test/index.babel.js --out-file test/index.js; npm run compile",
    "test": "tape test/index.js",
    "prepublish": "npm run compile",
    "preparse": "npm run compile",
    "parse": "node lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdwardIrby/stylelint-postcss-map.git"
  },
  "keywords": [
    "stylelint",
    "postcss",
    "map",
    "variables"
  ],
  "author": "Edward Irby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EdwardIrby/stylelint-postcss-map/issues"
  },
  "homepage": "https://github.com/EdwardIrby/stylelint-postcss-map#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-tape-runner": "^2.0.1",
    "tape": "^4.6.0"
  },
  "dependencies": {
    "stylelint": "^7.2.0",
    "stylelint-test-rule-tape": "^0.2.0"
  }
}
